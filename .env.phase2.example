# Phase 2 Configuration - Hybrid Redis/UDP Architecture

# Redis Control Plane (existing)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# UDP Audio Streaming
UDP_AUDIO_ENABLED=true
UDP_AUDIO_PORT=8001

# Jitter Buffer Configuration
JITTER_BUFFER_TARGET_MS=100
JITTER_BUFFER_MIN_MS=50
JITTER_BUFFER_MAX_MS=300
JITTER_BUFFER_ADAPTIVE=true

# Subtitle Configuration
SUBTITLES_ENABLED=true
SUBTITLES_METHOD=obs-websocket
SUBTITLES_DISPLAY_DURATION=5000

# OBS WebSocket (if using obs-websocket method)
OBS_WEBSOCKET_HOST=localhost
OBS_WEBSOCKET_PORT=4455
OBS_WEBSOCKET_PASSWORD=

# Audio Output (existing)
AUDIO_OUTPUT_TYPE=speaker
AUDIO_DEVICE=
AUDIO_BUFFER_SIZE=4096
SAVE_TO_FILE=false
AUDIO_OUTPUT_DIR=./audio-output

# Monitoring and Metrics
METRICS_ENABLED=true
METRICS_PORT=9090

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Performance Tuning
MEMORY_LIMIT_MB=200
SESSION_TIMEOUT_MS=300000
CLEANUP_INTERVAL_MS=30000