# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Channel Configuration
VOICE_RESPONSE_CHANNEL=chip.voice.responses
HEALTH_CHANNEL=chip.services.health

# Audio Output Configuration
# Options: speaker, ffplay, vlc, file
AUDIO_OUTPUT_TYPE=speaker
# Specify audio device name (e.g., "CABLE-A Input (VB-Audio Virtual Cable A)")
# Run 'npm run list-devices' to see available devices
# Leave empty to use system default
AUDIO_DEVICE=
AUDIO_BUFFER_SIZE=4096
SAVE_TO_FILE=false

# Metrics Configuration
METRICS_PORT=9090
METRICS_ENABLED=true

# Resilience Configuration
RECONNECT_MAX_ATTEMPTS=10
RECONNECT_BASE_DELAY=1000
RECONNECT_MAX_DELAY=30000
HEALTH_CHECK_INTERVAL=5000

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json